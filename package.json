    "ng2-charts": "^8.0.0",
    "ng2-nvd3": "^2.0.0",
    "ngx-echarts": "^19.0.0",
    "ngx-electron": "^2.2.0",
    "ngx-material-timepicker": "^13.1.1",
    "ngx-moment": "^6.0.2",
    "ngx-pagination": "^6.0.3",
    "rxjs": "~7.8.0",
    "simple-keyboard": "^3.8.39",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.8",
    "@angular-devkit/core": "19.1.9",
    "@angular-devkit/schematics": "19.1.9",
