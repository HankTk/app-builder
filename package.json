{
  "name": "@nxwork/source",
  "version": "0.0.0",
  "description": "NX Work Electron Application",
  "author": "NX Work Team",
  "license": "MIT",
  "main": "dist/apps/my-electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "my-app": "nx run my-app:serve:development",
    "App": "nx run my-electron:serve",
    "generate-icons": "node scripts/generate-icons.js",
    "electron:serve": "concurrently \"npm run my-app\" \"npm run App\"",
    "electron:build": "nx run my-app:build:production --base-href ./ && nx run my-electron:build && electron-builder"
  },
  "private": true,
  "build": {
    "asar": true,
    "appId": "com.nxwork.app",
    "productName": "NX Work",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/apps/my-electron/**/*",
      "dist/apps/my-app/**/*",
      "libs/assets/icons/angular/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./libs/assets/icons/angular/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./libs/assets/icons/angular/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./libs/assets/icons/angular/icon.png"
    }
  },
  "dependencies": {
    "@angular/animations": "19.2.0",
    "@angular/cdk": "^19.2.1",
    "@angular/common": "19.2.0",
    "@angular/compiler": "19.2.0",
    "@angular/core": "19.2.0",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "19.2.0",
    "@angular/material": "^19.2.1",
    "@angular/platform-browser": "19.2.0",
    "@angular/platform-browser-dynamic": "19.2.0",
    "@angular/router": "19.2.0",
    "@lit/reactive-element": "^2.1.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.9",
    "chartjs-plugin-annotation": "^3.1.0",
    "createjs-module": "^0.8.3",
    "d3": "^3.5.17",
    "echarts": "^5.6.0",
    "electron-notarize": "^1.2.2",
    "highcharts": "^12.1.2",
    "highcharts-angular": "^4.0.1",
    "lit": "^3.3.0",
    "lodash": "^4.17.21",
    "mermaid": "^11.5.0",
