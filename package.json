    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-preset-angular": "~14.4.0",
    "jsonc-eslint-parser": "^2.4.0",
    "koa": "^2.16.1",
    "nx": "20.4.6",
    "nx-electron": "^20.0.0",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "sharp": "^0.34.1",
    "svgexport": "^0.4.2",
