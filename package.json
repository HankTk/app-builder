    "vite": "^6.3.2"
  },
  "nx": {
    "includedScripts": [],
    "namedInputs": {
      "default": ["{projectRoot}/**/*", "sharedGlobals"],
      "production": ["default"],
      "dist/apps/my-electron/**/*": ["default"]
    }
